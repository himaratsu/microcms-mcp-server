{
  "name": "microcms-mcp-server",
  "version": "0.1.0",
  "description": "microCMS MCP Server - A Model Context Protocol server for microCMS API",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "microcms-mcp-server": "./bin/microcms-mcp-server.js"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE",
    "mcp-config-sample.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:args": "node dist/index.js --service-domain your-service-name --api-key your-api-key",
    "dev": "tsc --watch & node --watch dist/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "mcp",
    "microcms",
    "model-context-protocol",
    "ai",
    "claude",
    "cms",
    "headless-cms",
    "cli"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "microcms-js-sdk": "^3.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}